server {
    listen 80;
    listen [::]:80;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files $uri $uri/ =404; #
    }

    location ~ /\.ht {
        deny all;
    }

    # Предотвращение распространённых атак
    location = /favicon.ico {
        log_not_found off;
    }

    location = /robots.txt {
        allow all; #
    }

    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;
    
    server_tokens off;
}
